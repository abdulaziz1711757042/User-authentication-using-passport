<% if( typeof errors !== "undefined") { %> <% errors.forEach(function(error) {
%>
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <%= error.message %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% }); %> <% } %> <% if (typeof success_msg !== 'undefined' && success_msg !==
'') { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= success_msg %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<% } %> <% if(error_message !== ' ') { %>
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <%= error_message %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if(error!= ' ') { %>
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
